<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MasterSlaves.Avalonia.ViewModels"
             x:Class="MasterSlaves.Avalonia.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <Grid Background="#2D2D2D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#404040" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0" Content="â† BACK" 
                        Background="Transparent" Foreground="White"
                        FontWeight="Bold" FontSize="16"
                        Command="{Binding BackCommand}"/>

                <!-- Title -->
                <TextBlock Grid.Column="1" Text="SETTINGS" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>

                <!-- Save Button -->
                <Button Grid.Column="2" Content="SAVE" 
                        Background="#4CAF50" Foreground="White"
                        FontWeight="Bold" FontSize="16"
                        Padding="20,10"
                        CornerRadius="8"
                        Command="{Binding SaveCommand}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40" Spacing="20">
                
                <!-- Individual Slave Name Settings -->
                <Border Background="#404040" CornerRadius="10" Padding="20">
                    <StackPanel Spacing="15">
                        <TextBlock Text="INDIVIDUAL SLAVE NAMES" 
                                   FontSize="20" FontWeight="Bold" 
                                   Foreground="White"/>
                        
                        <TextBlock Text="Customize the name of each slave individually. Leave empty to use default name." 
                                   FontSize="14" Foreground="#CCCCCC"/>
                        
                        <!-- Slave Names Grid -->
                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding IndividualSlaveSettings}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="5">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Row="0" 
                                                           Text="{Binding SlaveId, StringFormat='Slave {0}'}" 
                                                           FontSize="16" FontWeight="Bold" 
                                                           Foreground="White" 
                                                           Margin="0,0,0,10"/>
                                                
                                                <TextBox Grid.Row="1" 
                                                         Text="{Binding CustomName}"
                                                         FontSize="14" Padding="8"
                                                         Background="#404040" Foreground="White"
                                                         BorderThickness="1" BorderBrush="#87CEEB"
                                                         CornerRadius="5"
                                                         Margin="0,0,0,8"/>
                                                
                                                <TextBlock Grid.Row="2" 
                                                           Text="{Binding DefaultName, StringFormat='Default: {0}'}" 
                                                           FontSize="12" 
                                                           Foreground="#AAAAAA"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Other Settings can be added here -->
                <Border Background="#404040" CornerRadius="10" Padding="20">
                    <StackPanel Spacing="15">
                        <TextBlock Text="OTHER SETTINGS" 
                                   FontSize="20" FontWeight="Bold" 
                                   Foreground="White"/>
                        
                        <TextBlock Text="Additional settings will be added here in future updates." 
                                   FontSize="14" Foreground="#CCCCCC"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
