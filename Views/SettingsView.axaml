<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MasterSlaves.Avalonia.ViewModels"
             x:Class="MasterSlaves.Avalonia.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <Grid Background="#2D2D2D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#404040" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0" Content="← BACK" 
                        Background="Transparent" Foreground="White"
                        FontWeight="Bold" FontSize="16"
                        Command="{Binding BackCommand}"/>

                <!-- Title -->
                <TextBlock Grid.Column="1" Text="SETTINGS" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>

                <!-- Save Button -->
                <Button Grid.Column="2" Content="SAVE" 
                        Background="#4CAF50" Foreground="White"
                        FontWeight="Bold" FontSize="16"
                        Padding="20,10"
                        CornerRadius="8"
                        Command="{Binding SaveCommand}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40" Spacing="20">
                
                <!-- Slave Button Name Settings -->
                <Border Background="#404040" CornerRadius="10" Padding="20">
                    <StackPanel Spacing="15">
                        <TextBlock Text="SLAVE BUTTON NAMES" 
                                   FontSize="20" FontWeight="Bold" 
                                   Foreground="White"/>
                        
                        <TextBlock Text="Edit the prefix for slave button names. Numbers 1-30 will be added automatically." 
                                   FontSize="14" Foreground="#CCCCCC"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Button Prefix:" 
                                       FontSize="16" FontWeight="Bold" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>
                            
                            <TextBox Grid.Column="1" Text="{Binding SlaveButtonPrefix}"
                                     FontSize="16" Padding="10"
                                     Background="#2D2D2D" Foreground="White"
                                     BorderThickness="1" BorderBrush="#87CEEB"
                                     CornerRadius="5"/>
                            
                            <Button Grid.Column="2" Content="APPLY" 
                                    Background="#87CEEB" Foreground="Black"
                                    FontWeight="Bold" FontSize="14"
                                    Padding="15,10"
                                    CornerRadius="5"
                                    Margin="15,0,0,0"
                                    Command="{Binding ApplyPrefixCommand}"/>
                        </Grid>
                        
                        <!-- Preview -->
                        <Border Background="#2D2D2D" CornerRadius="8" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Preview:" 
                                           FontSize="14" FontWeight="Bold" 
                                           Foreground="White" 
                                           Margin="0,0,0,10"/>
                                
                                <TextBlock Text="{Binding PreviewText}" 
                                           FontSize="14" Foreground="#87CEEB"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Other Settings can be added here -->
                <Border Background="#404040" CornerRadius="10" Padding="20">
                    <StackPanel Spacing="15">
                        <TextBlock Text="OTHER SETTINGS" 
                                   FontSize="20" FontWeight="Bold" 
                                   Foreground="White"/>
                        
                        <TextBlock Text="Additional settings will be added here in future updates." 
                                   FontSize="14" Foreground="#CCCCCC"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
